# Maintainer: Veeti Paananen <veeti.paananen@rojekti.fi>
pkgname=porg
pkgver=0.5
pkgrel=1
pkgdesc="A program to aid management of software packages installed from source code"
arch=('i686' 'x86_64')
url="http://porg.sourceforge.net/"
license=('GPL')
depends=('bash')
source=("http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz"
        'porg-0.5-install-fix.patch')
sha256sums=('7911870cd177733c3b4f947627eadec8252734cc23b2e86160931fc83feb03f1'
            'e069a50f8e3c5b143c81a95aac7d99633bf846553610ff443577ba6d8d520d29')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  # TODO upstream
  patch -p0 -i $srcdir/porg-0.5-install-fix.patch
  autoreconf

  ./configure --prefix=/usr --sysconfdir=/etc --disable-grop
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}

